<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="@string/title_text_view"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.198" />

    <EditText
        android:id="@+id/tempInput_edit_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/tempInput_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/title_text_view"
        app:layout_constraintStart_toStartOf="@+id/title_text_view"
        app:layout_constraintTop_toBottomOf="@+id/title_text_view" />

    <TextView
        android:id="@+id/tempOutput_text_view"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/tempOutput_text_view"
        app:layout_constraintEnd_toEndOf="@+id/tempInput_edit_text"
        app:layout_constraintStart_toStartOf="@+id/tempInput_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/tempInput_edit_text" />

    <Button
        android:id="@+id/convertTemp_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:text="@string/convertTemp_button"
        app:layout_constraintEnd_toEndOf="@+id/tempOutput_text_view"
        app:layout_constraintStart_toStartOf="@+id/tempOutput_text_view"
        app:layout_constraintTop_toBottomOf="@+id/tempOutput_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>