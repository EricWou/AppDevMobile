<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input_string_edit_text"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/input_string_edit_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reverse_string_text_view"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:text="@string/reverse_string_text_view"
        app:layout_constraintEnd_toEndOf="@+id/input_string_edit_text"
        app:layout_constraintStart_toStartOf="@+id/input_string_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/input_string_edit_text" />

    <Button
        android:id="@+id/reverse_string_button"
        android:layout_width="210dp"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:text="@string/reverse_string_button"
        app:layout_constraintEnd_toEndOf="@+id/reverse_string_text_view"
        app:layout_constraintStart_toStartOf="@+id/reverse_string_text_view"
        app:layout_constraintTop_toBottomOf="@+id/reverse_string_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>