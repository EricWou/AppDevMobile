<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/courseNo_edit_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/courseNo_edit_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <EditText
        android:id="@+id/courseName_edit_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/courseName_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/courseNo_edit_text"
        app:layout_constraintStart_toStartOf="@+id/courseNo_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/courseNo_edit_text" />

    <EditText
        android:id="@+id/courseMaxEnrl_edit_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/courseMaxEnrl_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/courseName_edit_text"
        app:layout_constraintStart_toStartOf="@+id/courseName_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/courseName_edit_text" />

    <EditText
        android:id="@+id/courseCredits_edit_text"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"
        android:text="@string/courseCredits_edit_text"
        app:layout_constraintEnd_toEndOf="@+id/courseMaxEnrl_edit_text"
        app:layout_constraintStart_toStartOf="@+id/courseMaxEnrl_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/courseMaxEnrl_edit_text" />

    <Button
        android:id="@+id/courseUpdate_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:text="@string/courseUpdate_button"
        app:layout_constraintEnd_toEndOf="@+id/courseCredits_edit_text"
        app:layout_constraintStart_toStartOf="@+id/courseCredits_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/courseCredits_edit_text" />
</androidx.constraintlayout.widget.ConstraintLayout>