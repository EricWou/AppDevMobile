<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="670dp"
        android:padding="20dp"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:layout_gravity="top|center">

        <TextView
            android:id="@+id/f_id_text_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/f_id_text_view" />

        <TextView
            android:id="@+id/f_Lname_text_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/f_Lname_text_view" />

        <TextView
            android:id="@+id/f_Fname_text_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/f_Fname_text_view" />

        <TextView
            android:id="@+id/f_salary_text_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/f_salary_text_view" />

        <TextView
            android:id="@+id/f_bonus_text_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/f_bonus_text_view" />

        <TextView
            android:id="@+id/f_bonus_total_text_view"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:text="@string/f_bonus_total_text_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:gravity="center" >

            <Button
                android:id="@+id/prevFaculty_button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                app:cornerRadius="5dp"
                android:text="@string/prevFaculty_button"/>

            <Button
                android:id="@+id/nextFaculty_button"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                app:cornerRadius="5dp"
                android:text="@string/nextFaculty_button" />

        </LinearLayout>

        <Button
            android:id="@+id/calculateBonus_button"
            android:layout_width="310dp"
            android:layout_height="60dp"
            app:cornerRadius="5dp"
            android:text="@string/calculateBonus_button" />

    </LinearLayout>

</FrameLayout>