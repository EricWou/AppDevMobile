<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/f_id_text_view"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="@string/f_id_text_view" />

                <TextView
                    android:id="@+id/f_Lname_text_view"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/f_Lname_text_view" />

                <TextView
                    android:id="@+id/f_Fname_text_view"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/f_Fname_text_view" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_margin="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/f_salary_text_view"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:text="@string/f_salary_text_view" />

                <TextView
                    android:id="@+id/f_bonus_text_view"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/f_bonus_text_view" />

                <TextView
                    android:id="@+id/f_bonus_total_text_view"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:text="@string/f_bonus_total_text_view" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/prevFaculty_button"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    app:cornerRadius="5dp"
                    android:text="@string/prevFaculty_button"/>

                <Button
                    android:id="@+id/nextFaculty_button"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    app:cornerRadius="5dp"
                    android:text="@string/nextFaculty_button" />

            </LinearLayout>

            <Button
                android:id="@+id/calculateBonus_button"
                android:layout_width="310dp"
                android:layout_height="60dp"
                app:cornerRadius="5dp"
                android:text="@string/calculateBonus_button" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>